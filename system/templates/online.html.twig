                    <tr>
                      <td class="LabelV150">Online Record:</td>
                      <td>{{ record|raw }}</td>
                    </tr>
                    <tr>
                      <td class="LabelV150">Location:</td>
                      <td>{{ config.lua.location }}</td>
                    </tr>
